<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>


<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@DrawView.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.DrawController">
   <children>
      <VBox prefHeight="60.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnBrush" mnemonicParsing="false" onAction="#handleSelectBrush" text="Brush" />
                  <Button fx:id="btnLine" mnemonicParsing="false" onAction="#handleSelectLine" text="Line" />
                  <Button fx:id="btnCircle" mnemonicParsing="false" onAction="#handleSelectCircle" text="Circle" />
                  <Button fx:id="btnEraser" mnemonicParsing="false" onAction="#handleSelectEraser" text="Eraser" />
                  <ColorPicker fx:id="colorPicker">
                     <value>
                        <Color />
                     </value>
                  </ColorPicker>
                  <TextField fx:id="tfBrushSize" prefHeight="25.0" prefWidth="60.0" text="10" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </VBox>
      <Canvas fx:id="canvas" height="500.0" layoutX="50.0" layoutY="60.0" onMouseDragged="#mouseDragged" onMousePressed="#mousePressed" onMouseReleased="#mouseReleased" width="700.0" />
   </children>
</AnchorPane>
